{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    },
    "includes": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}